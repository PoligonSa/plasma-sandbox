{
  "name": "plasmax-rew",
  "version": "0.0.1",
  "author": "AlexCZ <yakutoc@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm",
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:cjs": "tsc -b ./tsconfig.cjs.json",
    "build:clean": "rm -rf esm && npm run build:clean-type",
    "build:clean-type": "rm -f index.d.ts",
    "generate:typings": "tsc --outDir . --emitDeclarationOnly",
    "postbuild": "npm run generate:typings",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "plasmax-web": "0.34.0"
  },
  "devDependencies": {
    "@types/node": "16.7.13",
    "ts-node": "10.3.0",
    "typescript": "4.0.8"
  },
  "main": "src/index.ts",
  "module": "esm/index.js",
  "types": "index.d.ts"
}
